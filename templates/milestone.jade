extends base

block content
  .milestones
    .milestone
      - if page.meta.link
        a(href=page.meta.link, target='_blank')
          h3
            =page.meta.title
            - if page.meta.link
              span.icon-external-link.pull-right
      - else
        a(href='/#{page.path}')
          h3
            =page.meta.title
      .subtitle
        - if page.meta.subtitle
          span.icon-hand-right=' '
          =page.meta.subtitle
        &nbsp;
        span.icon-calendar
        time.pubdate(datetime=page.meta.date)=page.meta.date.strftime('%B %Y')
      .wrap
        - if page.meta.thumbnail
          img(src=page.meta.thumbnail)
        .markdown
          =page.html|safe
      - if page.meta.status
        p.status='Status: ' + page.meta.status
